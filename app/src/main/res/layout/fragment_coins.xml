<?xml version="1.0" encoding="utf-8"?>

<!--
ScrollView azért kell, mert a coin lista hossza változó,
és kisebb kijelzőn görgethetőnek kell lennie.
-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!--
    A LinearLayout tartalmazza a fragment UI elemeit egymás alatt
    -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--
        Coin adatok megjelenítésére szolgáló TextView
        A szöveget a CoinsFragment dinamikusan tölti fel
        -->
        <TextView
            android:id="@+id/txtCoins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kriptók betöltése..."
            android:textSize="17sp"
            android:padding="12dp"
            android:layout_marginTop="24dp"
            android:lineSpacingExtra="6dp" />

        <!--
        Vissza gomb a hírek listájához
        -->
        <Button
            android:id="@+id/btnBackToNews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Back News"
            android:textStyle="bold"
            android:textSize="18sp" />
    </LinearLayout>
</ScrollView>

    <!--
    Összefoglalás:
    - ScrollView biztosítja a görgethetőséget hosszú coin listánál
    - LinearLayout függőlegesen rendezi az elemeket
    - TextView dinamikusan kapja az adatokat Java-ból
    - Button fragmentek közti visszanavigálást indít
    -->
