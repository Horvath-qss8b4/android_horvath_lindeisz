<?xml version="1.0" encoding="utf-8"?>

<!--
Egyetlen hír elem megjelenítése a RecyclerView listában
-->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="?attr/selectableItemBackground">

    <!--
    Egyszerű ikon a listaelejére (vizuális jelölés)
    -->
    <TextView
        android:id="@+id/txtIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="▶"
        android:textSize="23sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!--
    Hír címe, amely a rendelkezésre álló helyet kitölti
    -->
    <TextView
        android:id="@+id/txtHeadline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/txtIcon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>

    <!--
    Összefoglalás:
    - RecyclerView egyetlen sorának kinézete
    - ConstraintLayout biztosítja az ikon és a cím vízszintes elrendezését
    - selectableItemBackground kattintható vizuális visszajelzést ad
    - Adapter tölti fel dinamikusan a hír címét
    -->
